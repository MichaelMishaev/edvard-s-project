{
  "name": "jerusalem-quest",
  "version": "1.0.0",
  "private": true,
  "description": "Jerusalem Quest - Gamified educational web app about Jerusalem",
  "author": "Edvard",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "db:migrate": "cd server && npm run db:migrate",
    "db:seed": "cd server && npm run db:seed",
    "db:generate": "cd server && npm run db:generate",
    "db:setup": "npm run db:migrate && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
